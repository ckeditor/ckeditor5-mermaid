{
  "name": "@ckeditor/ckeditor5-mermaid",
  "version": "0.0.4",
  "description": "Mermaid widget for CKEditor 5.",
  "private": true,
  "keywords": [
    "ckeditor",
    "ckeditor5",
    "ckeditor 5",
    "ckeditor5-feature",
    "ckeditor5-plugin",
    "ckeditor5-package-generator",
    "ckeditor5-mermaid"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "author": "CKSource (https://cksource.com/)",
  "homepage": "https://github.com/ckeditor/ckeditor5-mermaid",
  "bugs": "https://github.com/ckeditor/ckeditor5-mermaid/issues",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.14.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*",
    "./browser/*": null,
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "ckeditor5-metadata.json"
  ],
  "dependencies": {
    "es-toolkit": "^1.43.0",
    "mermaid": "^11.12.2"
  },
  "peerDependencies": {
    "@ckeditor/ckeditor5-core": ">=48.0.0 || ^0.0.0-nightly",
    "ckeditor5": ">=48.0.0 || ^0.0.0-nightly"
  },
  "devDependencies": {
    "@ckeditor/ckeditor5-core": "latest",
    "@ckeditor/ckeditor5-inspector": "^5.0.0",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/browser-webdriverio": "^4.0.6",
    "@vitest/coverage-istanbul": "^4.0.6",
    "ckeditor5": "latest",
    "eslint": "^9.27.0",
    "eslint-config-ckeditor5": "^13.0.0",
    "eslint-plugin-ckeditor5-rules": "^13.0.0",
    "globals": "^16.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "stylelint": "^16.0.0",
    "stylelint-config-ckeditor5": "^13.0.0",
    "typescript": "~5.5.4",
    "vite": "^7.3.0",
    "vite-plugin-svgo": "^2.0.0",
    "vitest": "^4.0.6",
    "webdriverio": "^9.19.2"
  },
  "overrides": {
    "sugarss": "^5.0.1"
  },
  "scripts": {
    "start": "vite",
    "build": "pnpm run build:types && pnpm run build:npm && pnpm run build:browser",
    "build:npm": "vite build --mode npm",
    "build:browser": "vite build --mode browser",
    "build:types": "tsc -p tsconfig.build.json",
    "test": "vitest",
    "test:debug": "vitest --inspect-brk --no-file-parallelism --browser.headless=false",
    "lint": "eslint",
    "stylelint": "stylelint --quiet --allow-empty-input 'theme/**/*.css'",
    "prepublishOnly": "pnpm run build"
  },
  "lint-staged": {
    "**/*": [
      "eslint --quiet"
    ],
    "**/*.css": [
      "stylelint --quiet --allow-empty-input"
    ]
  }
}
